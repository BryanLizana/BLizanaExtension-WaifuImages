{
  "name": "waifu-tab-images",
  "displayName": "Waifu Tab Images",
  "description": "Muestra una imagen decorativa aleatoria (waifu) en la esquina inferior derecha de cada tab del editor de VS Code",
  "version": "0.1.0",
  "publisher": "blizana",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionKind": [
    "ui"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "waifuTabImages.instalar",
        "title": "Waifu Tab Images: Instalar / Install"
      },
      {
        "command": "waifuTabImages.desinstalar",
        "title": "Waifu Tab Images: Desinstalar / Uninstall"
      },
      {
        "command": "waifuTabImages.recargar",
        "title": "Waifu Tab Images: Recargar Imagenes / Reload Images"
      }
    ],
    "configuration": {
      "title": "Waifu Tab Images",
      "properties": {
        "waifuTabImages.habilitado": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar/deshabilitar imagenes waifu en los tabs del editor"
        },
        "waifuTabImages.opacidad": {
          "type": "number",
          "default": 0.4,
          "minimum": 0.05,
          "maximum": 0.8,
          "description": "Opacidad de la imagen (0.05 a 0.8)"
        },
        "waifuTabImages.tamano": {
          "type": "number",
          "default": 300,
          "minimum": 50,
          "maximum": 800,
          "description": "Tamano de la imagen en pixeles (ancho y alto)"
        },
        "waifuTabImages.rutaCarpetaImagenes": {
          "type": "string",
          "default": "",
          "description": "Ruta personalizada a una carpeta de imagenes. Dejar vacio para usar las imagenes incluidas por defecto."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@vscode/sudo-prompt": "^9.3.1"
  }
}
